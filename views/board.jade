doctype html
html(lang="en")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", type="text/css", href="/css/main.css")
    link(href='http://fonts.googleapis.com/css?family=Droid+Sans', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Rock+Salt', rel='stylesheet' type='text/css')
    script(src="http://code.jquery.com/jquery-1.11.0.min.js")
    script(src="/js/plugins/jlivetime-0.0.13.min.js")
    script(type='text/javascript').
      var countDown = !{((settings.minutes * 60) + settings.seconds) * 1000}
      var openPicks = !{JSON.stringify(openPicks)}
    script(src="/js/board.js")
    title= pageTitle
  body
    - var boardUrl = "http://www.freedraftboard.com/board/" + settings.shortId;
    .board(id="#{settings.shortId}")
      #control-panel.control-panel
        button#start-draft.button.tertiary.start-draft Start Drafting
        button#pause-draft.button.quadrary.pause-draft Pause Draft
        button#resume-draft.button.tertiary.resume-draft Resume Draft
        .pick-nav
          button#previous-pick.button.primary.previous-pick &laquo;
          button#next-pick.button.primary.next-pick &raquo;
      .league-info.cf
        .league-settings
          h1.league-name= settings.league
          p.board-url URL: 
            a(href="#{boardUrl}") #{boardUrl}
          p.total-rounds #{"Rounds: " + settings.rounds}
          p.pick-time #{"Pick Time: " + settings.minutes + " Minutes, " + settings.seconds + " Seconds"}
      .league
        each teamName in settings.teams
          div(id="#{teamName}", class="team")= teamName
      - for (i=1;i<settings.rounds+1;i++)
        if settings.serpentine
          include partials/board/round_serpentine 
        else
          include partials/board/round_standard
      #selection-blanket.selection-blanket
      #selection.selection
        .selection-content
          h3.your-pick Enter selection for
          h2#team_id.team-id
          form#selection_form(action="#", method="POST")
            input#player_name.text-input.tertiary.player-input(type="text", name="player")
            input#full_pick_id(type="hidden", name="pick")
            input#short_id(type="hidden", name="shortId")
            input#team_name(type="hidden", name="teamName")
            input.button.tertiary.pick-submit(type="submit", value="Go")
          .pick-indicator
            h3.round-id Round:&nbsp;
              span#round_id
              |  Pick:&nbsp;
              span#pick_id
